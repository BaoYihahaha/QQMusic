page{
  background: white;
}
.top{
  width: 100%;
  height: 550rpx;
}
.blur {	
    width: 100%;
    height: 100%;
    position: relative;
    -webkit-filter: blur(10px);
    -moz-filter: blur(10px);
    -o-filter: blur(10px);
    -ms-filter: blur(10px);
    filter: blur(10px);
}
.top .main{
  width: 100%;
  height: 450rpx;
  position: absolute;
  left: 0;
  top: 0;
  padding: 125rpx 0rpx 0rpx 32rpx;
  display: flex;
  background: rgba(0,0,0,.5);
}
.top .main .right{
  color: white;
  padding: 32rpx 0rpx 0rpx 22rpx;
}
.top .main .right .title{
  font-size: 40rpx;
}
.top .main .right .day{
  font-size: 30rpx;
  margin-top: 35rpx;
}
.top .main .right .time{
  font-size: 28rpx;
   margin-top: 35rpx;
}
.top .main image{
  width: 250rpx;
  height: 250rpx;
}
.top .btn{
  position:absolute;
  background: #31c27c;
  left: 205rpx;
  top: 420rpx;
  line-height: 80rpx;
  width: 340rpx;
  border-radius: 20rpx;
  height: 80rpx;
}
.icon-bofang1,.icon-bofang{
  color: #31c27c;
  position:absolute;
  font-size: 100rpx;
  left: 50rpx;
  top:410rpx;
}
.content .title{
  margin: 40rpx 30rpx;
  font-size: 34rpx;
}
.content .item{
  height: 128rpx;
  display: flex;
}
.content .item .right{
  overflow: hidden;
  flex: auto;
}
.content .item .left{
  width: 100rpx;
  height: 100rpx;
  flex: 0 0 100rpx;
  line-height: 100rpx;
  text-align: center;
  overflow: hidden;
}

.content .item .right .song-name{
  font-size: 34rpx;
}
.content .item .right .song-author{
  font-size: 30rpx;
  flex: auto;
  color: #787878;
}

